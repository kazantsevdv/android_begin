<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.android_begin.fragments.CitySelectionFragment"
        android:label="@string/City_Selection"
        tools:layout="@layout/fragment_city_selection" />
    <fragment
        android:id="@+id/navigation_info"
        android:name="com.example.android_begin.fragments.InfoFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.android_begin.fragments.SettingFragment"
        android:label="@string/titl_settings"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/navigation_hist"
        android:name="com.example.android_begin.fragments.HistFragment"
        android:label="@string/Hist"
        tools:layout="@layout/fragment_hist" />
</navigation>